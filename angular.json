{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "projects": {
    "payment-elements": {
      "projectType": "library",
      "root": "projects/payment-elements",
      "sourceRoot": "projects/payment-elements/src",
      "prefix": "pe",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "options": {
            "tsConfig": "projects/payment-elements/tsconfig.lib.json",
            "project": "projects/payment-elements/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/payment-elements/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/payment-elements/src/test.ts",
            "tsConfig": "projects/payment-elements/tsconfig.spec.json",
            "karmaConfig": "projects/payment-elements/karma.conf.js"
          }
        }
      }
    }
  }
}
